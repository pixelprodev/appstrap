{
  "name": "@pixelprodotco/appstrap",
  "version": "0.5.0-beta.3",
  "description": "Uber-configurable mock server for bootstrapping single page apps",
  "main": "src/Appstrap.js",
  "bin": "./src/cli.js",
  "author": "",
  "license": "ISC",
  "repository": "https://github.com/pixelprodotco/appstrap",
  "scripts": {
    "deploy": "npm run lint && npm test && npm run deploy:ui",
    "deploy:ui": "webpack --config src/management-interface/webpack/webpack.config.js --mode production",
    "dev:ui": "webpack --config src/management-interface/webpack/webpack.config.js --mode development --watch --progress",
    "lint": "standard",
    "test": "jest",
    "test-config-generate": "node src/cli.js init",
    "test-config": "node src/cli.js start -c ./_test/_testConfig/config.js --preserve false"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "commander": "^2.14.1",
    "decache": "^4.4.0",
    "express": "^4.16.3",
    "lodash.merge": "^4.6.1",
    "opn": "^5.4.0",
    "prettier": "^1.12.1",
    "sleep-promise": "2.0.0",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "emotion": "^9.2.10",
    "emotion-theming": "^9.2.9",
    "expect": "^23.6.0",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^5.2.0",
    "pre-commit": "^1.2.2",
    "react": "^16.4.0",
    "react-debounce-input": "^3.2.0",
    "react-dom": "^16.4.0",
    "react-emotion": "^9.2.10",
    "standard": "^12.0.1",
    "supertest": "^3.3.0",
    "webpack": "^4.17.2",
    "webpack-cli": "^2.1.4"
  },
  "standard": {
    "envs": [
      "jest",
      "mocha",
      "browser"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
